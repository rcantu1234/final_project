<%= simple_form_for(@location) do |f| %>

  <div class="form-inputs">
    <%= f.input :zip_code %>
    <%= f.association :user %>
    <%= f.label 'Miles' %>
    <%= f.select :distance, [[1], [5], [10], [20]] %>
  </div>

  <br>

  <div class="form-actions">
    <%= f.button :submit  %>
  </div>
<% end %>

