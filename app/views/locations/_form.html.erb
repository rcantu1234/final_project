<%= simple_form_for(@location) do |f| %>

  <div class="form-inputs">
    <%= f.input :zip_code %>
    <%= f.input :address %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.association :user%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
