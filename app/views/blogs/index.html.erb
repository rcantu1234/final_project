<h1>All Posts</h1>

<% @blogs.each do |blog| %>
    <h2><img src="https://gp3.googleusercontent.com/-vW2tmEkthc0/AAAAAAAAAAI/AAAAAAAAAAA/q8Lqhot15fc/s48-c-k-no/photo.jpg" width="48px" height="48px" alt="" class="Uk vKa" oid="UCVkfp3BqPjSvnPesUpz9-KA">
    <%= link_to blog.title, blog %></h2>

    <p><%= blog.content %></p>
    <small><%= blog.created_at %></small>

    <p><%= link_to 'Edit', edit_blog_path(blog) %> |
    <%= link_to 'Delete', blog_path(blog), method: :delete, data: { confirm: 'Are you sure?' } %></p>
    <hr />
<% end %>

<p><%= link_to "Add a New Post", new_blog_path %></p>



